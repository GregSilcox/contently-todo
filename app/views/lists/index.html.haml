%h1 Lists

%table
  %thead
    %tr
      %th Name
      %th
      %th
      %th

  %tbody
    - @lists.each do |list|
      %tr
        %td=list.name
        %td=link_to 'Show', list
        %td=link_to 'Edit', edit_list_path(list)
        %td=link_to 'Destroy', list, method: :delete, data: { confirm: 'Are your sure?' }

=link_to 'Add a List', new_list_path
